{
  "name": "mql-debugger",
  "version": "1.0.0",
  "description": "This is a simple LL JSON Parser which traces the starting position of each token, for using with MQL debugger in VSCode",
  "main": "./out/vscode/extension.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-parser": "spago build",
    "build-ext": "npx tsc"
  },
  "type": "commonjs",
  "engines": {
    "vscode": "^1.66.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mongodb-labs/jsonpos.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mongodb-labs/jsonpos/issues"
  },
  "homepage": "https://github.com/mongodb-labs/jsonpos#readme",
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "contributes": {
    "configuration": {
      "title": "MQL Debugger",
      "properties": {
        "mqldebugger.pipelineRunnerPath": {
          "type": "string",
          "default": "",
          "description": "Path to the pipeline runner."
        }
      }
    },
    "commands": [
      {
        "command": "extension.mqldebugger.debugCurrentEditor",
        "title": "Start MQL Debugging"
      }
    ],
    "breakpoints": [
      {
        "language": "json"
      }
    ],
    "debuggers": [
      {
        "type": "mql",
        "label": "mql-debugger",
        "program": "./out/vscode/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "workspace"
            ],
            "properties": {
              "workspace": {
                "type": "string",
                "description": "Absolute path to the workspace.",
                "default": "${workspaceFolder}"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "mql",
            "request": "launch",
            "name": "mql",
            "internalConsoleOptions": "openOnSessionStart",
            "workspace": "${workspaceFolder}"
          }
        ]
      }
    ]
  },
  "dependencies": {
    "@types/node": "^20.2.5",
    "@types/vscode": "^1.78.1",
    "@vscode/debugadapter": "^1.61.0",
    "@vscode/debugprotocol": "^1.61.0",
    "purescript": "^0.15.9",
    "spago": "^0.21.0",
    "typed-signals": "^2.5.0",
    "vscode-debugadapter": "^1.51.0",
    "wait-for-signals": "^1.2.7"
  },
  "devDependencies": {
    "typescript": "^5.1.3"
  }
}
